<odoo>
  <data>
    <record id="sale_order_view_form" model="ir.ui.view">
      <field name="name">sale.order.view.form.inherit.account_deplog</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='payment_term_id']" position="after">
            <field name="task_id" options="{'no_create_edit': True}" string="Tareas"/>
            <field name="num_operation" string="Referencia"/>
            <button name="update_task_id" string="Actualizar Tarea" type="object" class="oe_link" invisible="1"/>
            <button name="update_all_task_id" string="Actualizar Todo" type="object" class="oe_link" invisible="1"/>
          </xpath>
          <!-- <xpath expr="//field[@name='analytic_account_id']" position="attributes">
            <attribute name="attrs">{'required': [('state','=','sale')]}</attribute>
          </xpath> -->
      </field>
  </record>
  </data>
</odoo>