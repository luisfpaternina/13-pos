<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_deplog">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="account_deplog.report_invoice_deplog_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_document_with_payments_deplog" inherit_id="account.report_invoice_with_payments">
            <xpath expr="//t[@t-call='account.report_invoice_document_with_payments']" position="replace">
                <t t-call="account_deplog.report_invoice_deplog_document" t-lang="lang"/>
            </xpath>
        </template>

        <!-- <?xml version="1.0"?> -->
        <template id="report_invoice_deplog_document">
            <t t-call="account_deplog.report_invoice_deplog_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="data" t-value="o.get_data_report_invoice_e()"/>
                <div t-attf-class="watermark" class="watermark_report o_company_#{company.id}_layout" style="position:fixed; opacity:0.2; width: 600px; height: 100px; top: 300px; left:40px; border: 1px solid black">
                    <img t-att-src="image_data_uri(o.company_id.logo)" style="width:800px; align: center"/>
                </div>
                <div class="page">
                    <style>
                        #p_info {
                            font-family: sans-serif;
                            align: justify;
                            font-size:11px;
                        }
                        #a {
                            border: 0px solid black;
                            width: 100%;
                            height: 150px;
                            font-family: sans-serif;
                            font-size:11px;
                        }
                        #sp {
                            float: left;
                            border: 0px solid red;
                            width: 5%;
                            height: 100%;
                        }
                        #a1 {
                            float: left;
                            border: 0px solid red;
                            width: 40%;
                            height: 100%; 
                        }
                        #a2 {
                            float: left;
                            border: 0px solid red;
                            width: 25%;
                            height: 100%;
                        }
                        #a3 {
                            float: left;
                            border: 0px solid red;
                            width: 25%;
                            height: 100%;
                        }
                        #tab_lines {
                            font-family: sans-serif;
                            font-size:12px;
                        }
                        #tab_detail {
                          font-family: sans-serif;
                          font-size:12px;
                        }
                    </style>
                    
                    <div id="a">
                        <div id="a1">
                            <p>
                            <b>CLIENTE:</b>&#8195; &#8195; <span t-esc="data['customer']"/><br/>
                            <b>NIT:</b>&#8195; &#8195;&#8195;&#8195;&#8195;<span t-esc="data['nit']"/><br/>
                            <b>DIRECCION:</b>&#8195; <span t-esc="data['address']"/><br/>
                            <b>TELEFONO:</b>&#8195; <span t-esc="data['phone']"/><br/>
                            <b>CONTACTO:</b>&#8195;<span t-esc="data['contact']"/><br/>
                            </p>
                        </div>
                        <div id="sp">
                        </div>
                        <div id="a2">
                            <p>
                            <b>REF:</b>&#8195;&#8195;&#8195;&#8195;&#8195;&#8195;<span t-esc="data['ido']"/><br/>
                            <b>DOC. TRANS:</b>&#8195; <span t-esc="data['doc_trans']"/><br/>
                            <b>MERCANCIA:</b> &#8195; <span t-esc="data['mercancia']"/><br/>
                            <b>PEDIDO:</b>&#8195; &#8195; &#8195; <span t-esc="data['pedido']"/><br/>
                            <b>INCOTERM:</b>&#8195;&#8195; <span t-esc="data['incoterm']"/><br/>
                            </p>
                        </div>
                        <div id="sp">
                        </div>
                        <div id="a3">
                            <p>
                            <b>FECHA:</b>&#8195; &#8195;<span t-esc="data['date']"/><br/>
                            <b>ETA:</b>&#8195; &#8195; &#8195; <span t-esc="data['eta']"/><br/>
                            <b>VENCE:</b>&#8195; &#8195;<span t-esc="data['date_venc']"/><br/>
                            <b>TASA:</b>&#8195;&#8195;&#8195;<span t-esc="data['tasa']"/><br/>
                            <b>PAGO:</b>&#8195;&#8195;&#8195;<span t-esc="data['pay']"/><br/>
                            </p>
                        </div>
                    </div>
                </div>
                
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <table id="tab_lines" class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <!-- TODO: remove in master -->
                                <!-- <th name="th_source" class="d-none text-left" t-if="0"><span>Source Document</span></th> -->
                                <!-- <th name="th_quantity" class="text-right"><span>Quantity</span></th> -->
                                <!-- <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th> -->
                                <!-- <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span> -->
                                    <!-- TODO: remove in master -->
                                    <!-- <t t-set="colspan" t-value="colspan+1"/>
                                </th> -->
                                <!-- <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th> -->
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Subtotal</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <!-- <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td> -->
                                        <!-- <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td> -->
                                        <!-- <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td> -->
                                        <!-- <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td> -->
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
    
                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table id="tab_detail" class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> 
                                                    <!-- on
                                                        <t t-esc="amount_by_group[4]"/> -->
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Total en Letras:</strong></td>
                                        <td class="text-right">
                                            <t t-set="total_letras" t-value="o.currency_id.amount_to_text(o.amount_total)"/>
                                            <t t-if="o.currency_id.name == 'COP' and 'Peso' in total_letras and int(o.amount_total) != 1"><t t-set="total_letras" t-value="total_letras.replace('Peso', 'Pesos')"/></t>
                                            <t t-if="o.currency_id.name == 'USD' and 'Dollars' in total_letras"><t t-set="total_letras" t-value="total_letras.replace('Dollars', 'Dolares')"/></t>
                                            <t t-if="o.currency_id.name == 'USD' and 'Dollar' in total_letras"><t t-set="total_letras" t-value="total_letras.replace('Dollar', 'Dolar')"/></t>
                                            <t t-if="o.currency_id.name in ('USD','EUR') and 'Cents' in total_letras"><t t-set="total_letras" t-value="total_letras.replace('Cents', 'Centavos')"/></t>
                                            <t t-elif="o.currency_id.name in ('USD','EUR') and 'Cent' in total_letras"><t t-set="total_letras" t-value="total_letras.replace('Cent', 'Centavo')"/></t>
                                            <p><span align="justify" t-if="o.currency_id" t-esc="total_letras"/></p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <p id="p_info" t-if="o.type in ('out_invoice', 'in_refund')">
                        Please use the following communication for your payment : <b><span t-field="o.invoice_payment_ref"/></b>
                    </p>
                    <p id="p_info" t-if="o.narration" name="comment">
                        <span t-field="o.narration"/>
                    </p>
                    <t t-if="o.company_id.einvoicing_enabled == True">
                        <t t-foreach="o.dian_document_lines" t-as="dd">
                            <t t-if="dd.state == 'done' or dd.state == 'sent'">
                                <p><strong>CUFE/CUDE:</strong><span t-field="dd.cufe_cude"/></p>
                                <img class="image" t-attf-src="data:image/png;base64,{{dd.qr_image}}" style="width:100px;height:100px;margin-bottom:5px"/>
                                <span t-field="o.name"/>
                            </t>
                        </t>
                    </t>
                    <!-- <p id="p_info" t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p id="p_info" t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p> -->
                
                </t>
                    
            </template>

            <!-- <?xml version="1.0"?> -->
            <template id="report_invoice_deplog_layout">
                <t t-if="not o" t-set="o" t-value="doc"/>
                    <t t-if="not company">
                        <!-- Multicompany -->
                        <t t-if="company_id">
                            <t t-set="company" t-value="company_id"/>
                        </t>
                        <t t-elif="o and 'company_id' in o">
                            <t t-set="company" t-value="o.company_id.sudo()"/>
                        </t>
                        <t t-else="else">
                            <t t-set="company" t-value="res_company"/>
                        </t>
                    </t>
                
                    <div t-attf-class="header o_company_#{company.id}_layout" style="border: 0px solid black; width: 100%; font-family: sans-serif; font-size: 12px; height: 130px;">
                    <style type="text/css">
                        #top {
                            width: 100%;
                            height: 100px;
                            border: 0px solid red;
                        }
                        #bottom {
                            width: 100%;
                            height: 55px;
                            border: 0px solid red;
                        }
                        #a {
                            float: left;
                            border: 0px solid black;
                            width: 30%;
                            height: 100%;
                            padding: 10px;
                            text-align: center;
                        }
                        #b {
                            float: left;
                            border: 0px solid black;
                            width: 47%;
                            height: 100%;
                            padding: 10px;
                            text-align: center;
                        }
                        #c{
                            float: left;
                            border: 0px solid black;
                            width: 23%;
                            height: 100%;
                            padding: 10px;
                            text-align: center;
                        }
                        <!-- #d {
                            float: left;
                            border: 0px solid black;
                            width: 77%;
                            height: 100%;
                            padding: 10px;
                            text-align: left;
                            align: justify;
                        }
                        #e{
                            float: left;
                            border: 0px solid black;
                            width: 23%;
                            height: 100%;
                            padding: 5px;
                            text-align: left;
                        } -->
                    </style>
                    <div id="top">
                        <div id="a">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                        </div>
                        <div id="b">
                            <h5>Profesionalismo, Ética y Pasión</h5>
                            <h7>NIT: <t t-esc="company.vat"/></h7>
                            <p></p>
                            <i class="fa fa-globe" role="img" aria-label="Website" title="Website"/>  <span t-field="company.website"/><i/>
                        </div>
                        <div id="c">
                            <h6><t t-if="o.type == 'out_invoice'">FACTURA DE VENTA</t>
                                <t t-elif="o.type == 'out_refund'">NOTA CREDITO</t><br/></h6>
                            <h6><b><t t-esc="o.name"/></b></h6>
                        </div>
                    </div>
                    <!-- <div id="bottom">
                        <div id="d">
                            <p id="sub-heading">TARIFA 9.66X 1000. FACTURACION VIGENCIA 18 MESES NORMATIVIDAD 000055 DEL 14 DE JULIO DE 2016. IVA RÉGIMEN COMÚN - NO SOMOS GRANDES CONTRIBUYENTES - NO SOMOS AUTORETENEDORES</p>
                        </div>
                        <div id="e">
                            <p><b>Lorem Ipsum 12345<br/>
                                Dolor sit 1234 amet 4211<br/>
                                Fecha 29/05/2020</b></p>
                        </div>
                    </div> -->
                    <div style="border-bottom: 1px solid #CACCC6; height: 20px;">
                    </div>
                </div>
                
                <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">    
                    <t t-call="web.address_layout"/>
                    <t t-raw="0"/>
                </div>

                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <style>
                        #div_f {
                            font-family: sans-serif; 
                            font-size: 12px;
                        }
                    </style>
                    <div id="div_f" class="text-center" style="border-top: 1px solid black;">
                        <ul class="list-inline mb4">
                            
                            <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span t-field="company.phone"/></li>
                            <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                            <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                            <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                            <li t-if="company.street" class="list-inline-item d-inline">Dir: <span t-field="company.street"/> <span t-field="company.street2"/> <span t-field="company.state_id.name"/> <span t-field="company.country_id.name"/></li>
                        </ul>

                        <div name="financial_infos">
                            <span t-field="company.report_footer"/>
                        </div>

                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </template>
    </data>
</odoo>